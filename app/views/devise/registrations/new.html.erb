<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        background-color: #000000 !important;
        color: #ffffff !important;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif !important;
        padding: 0 !important;
        margin: 0 !important;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .signup-container {
        max-width: 400px;
        width: 100%;
        padding: 20px;
    }

    .login-form {
        background-color: #1a1a1a;
        border-radius: 12px;
        padding: 40px;
    }

    h1 {
        font-size: 32px;
        font-weight: 700;
        letter-spacing: -1px;
        text-align: center;
        margin-bottom: 30px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-group label {
        display: block;
        margin-bottom: 8px;
        color: #ccc;
        font-size: 14px;
    }

    .form-group input {
        width: 100%;
        padding: 12px;
        background-color: #222;
        border: 1px solid #333;
        border-radius: 8px;
        color: #fff;
        font-size: 16px;
    }

    .form-group input:focus {
        outline: none;
        border-color: #00bfff;
    }

    .submit-btn {
        width: 100%;
        padding: 15px;
        background-color: #00bfff;
        color: #000;
        border: none;
        border-radius: 8px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        margin-top: 10px;
    }

    .submit-btn:hover {
        background-color: #0099cc;
    }

    .form-link {
        text-align: center;
        margin-top: 20px;
        color: #999;
        font-size: 14px;
    }

    .form-link a {
        color: #00bfff;
        text-decoration: none;
    }

    .form-link a:hover {
        text-decoration: underline;
    }

    .error-messages {
        background-color: #ff0000;
        color: #fff;
        padding: 15px;
        border-radius: 8px;
        margin-bottom: 20px;
    }

    .back-link {
        text-align: center;
        margin-bottom: 20px;
    }

    .back-link a {
        color: #00bfff;
        text-decoration: none;
        font-size: 14px;
    }

    .back-link a:hover {
        text-decoration: underline;
    }
</style>

<div class="signup-container">
    <div class="back-link">
        <%= link_to "← Back to Home", root_path %>
    </div>

    <div class="login-form">
        <h1>Sign Up</h1>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <% if resource.errors.any? %>
                <div class="error-messages">
                    <h3><%= pluralize(resource.errors.count, "error") %> prohibited this from being saved:</h3>
                    <ul>
                        <% resource.errors.full_messages.each do |message| %>
                            <li><%= message %></li>
                        <% end %>
                    </ul>
                </div>
            <% end %>

            <!-- USERNAME -->
            <div class="form-group">
                <%= f.label :username %>
                <%= f.text_field :username, placeholder: "your.username", required: true %>
            </div>

            <div class="form-group">
                <%= f.label :first_name %>
                <%= f.text_field :first_name, autofocus: true, placeholder: "Milo" %>
            </div>

            <div class="form-group">
                <%= f.label :last_name %>
                <%= f.text_field :last_name, placeholder: "Hart" %>
            </div>

            <div class="form-group">
                <%= f.label :email %>
                <%= f.email_field :email, autocomplete: "email", placeholder: "your@email.com" %>
            </div>

            <div class="form-group">
                <%= f.label :password %>
                <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %>
                <%= f.password_field :password, autocomplete: "new-password", placeholder: "••••••••" %>
            </div>

            <div class="form-group">
                <%= f.label :password_confirmation %>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "••••••••" %>
            </div>

            <%= f.submit "Sign Up", class: "submit-btn" %>
        <% end %>

        <div class="form-link">
            Already have an account? <%= link_to "Log in", new_user_session_path %>
        </div>
    </div>
</div>
