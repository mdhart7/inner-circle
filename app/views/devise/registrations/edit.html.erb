<div class="login-form" style="background-color:#1a1a1a; border-radius:12px; padding:40px; max-width:400px; margin:50px auto;">
  <h1 style="text-align:center; margin-bottom:30px;">Edit Profile</h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    
    <div class="form-group">
      <label>Username</label>
      <%= f.text_field :username,
            required: true,
            class: "form-control",
            style: "width:100%; padding:12px; background:#222; border:1px solid #333; border-radius:8px; color:#fff;" %>
    </div>

  
    <div class="form-group">
      <label>First Name</label>
      <%= f.text_field :first_name,
            class: "form-control",
            style: "width:100%; padding:12px; background:#222; border:1px solid #333; border-radius:8px; color:#fff;" %>
    </div>

  
    <div class="form-group">
      <label>Last Name</label>
      <%= f.text_field :last_name,
            class: "form-control",
            style: "width:100%; padding:12px; background:#222; border:1px solid #333; border-radius:8px; color:#fff;" %>
    </div>

    
    <div class="form-group">
      <label>Email</label>
      <%= f.email_field :email,
            class: "form-control",
            style: "width:100%; padding:12px; background:#222; border:1px solid:#333; border-radius:8px; color:#fff;" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p style="color:#999;">Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

   
    <div class="form-group">
      <label>New Password <small style="color:#666">(leave blank if unchanged)</small></label>
      <%= f.password_field :password, autocomplete:"new-password",
            class:"form-control",
            style:"width:100%; padding:12px; background:#222; border:1px solid #333; border-radius:8px; color:#fff;" %>
    </div>

    <div class="form-group">
      <label>Confirm New Password</label>
      <%= f.password_field :password_confirmation, autocomplete:"new-password",
            class:"form-control",
            style:"width:100%; padding:12px; background:#222; border:1px solid #333; border-radius:8px; color:#fff;" %>
    </div>

   
    <div class="form-group">
      <label>Current Password</label>
      <%= f.password_field :current_password, required:true, autocomplete:"current-password",
            class:"form-control",
            style:"width:100%; padding:12px; background:#222; border:1px solid #333; border-radius:8px; color:#fff;" %>
    </div>

    <%= f.submit "Update Profile", class:"submit-btn",
          style:"width:100%; padding:15px; background:#00bfff; color:#000; border:none; border-radius:8px; font-size:16px; font-weight:600; cursor:pointer; margin-top:10px;" %>
  <% end %>

  <hr style="border-color:#333; margin:20px 0;">

  <h3 style="color:#ff5555; text-align:center; margin-bottom:15px;">Delete My Account</h3>

  <%= button_to "Delete Account", registration_path(resource_name),
        method: :delete,
        data: { confirm:"Are you sure? This cannot be undone." },
        class:"submit-btn",
        style:"background:#ff0000; color:#fff;" %>

  <div style="text-align:center; margin-top:20px;">
    <%= link_to "Back", root_path, style:"color:#00bfff;" %>
  </div>
</div>
